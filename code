         case EVENT_FORCE_SIGNAL:message="Ø¥Ø´Ø§Ø±Ø© FORCE - Ø«Ù‚Ø©:"+DoubleToString(dparam,1)+"%";break;
         case EVENT_SCALPING_SIGNAL:message="Ø¥Ø´Ø§Ø±Ø© Ø³ÙƒØ§Ù„Ø¨ÙŠÙ†Ø¬ - Ø§ØªØ¬Ø§Ù‡:"+(lparam>0?"ØµØ¹ÙˆØ¯":"Ù‡Ø¨ÙˆØ·");break;
         case EVENT_USTP_SIGNAL:message="ØªÙ†Ø¨Ø¤ ÙÙˆØ±ÙŠ - Ø§ØªØ¬Ø§Ù‡:"+(lparam>0?"ØµØ¹ÙˆØ¯":"Ù‡Ø¨ÙˆØ·")+" Ø«Ù‚Ø©:"+DoubleToString(dparam,1)+"%";if(sparam!="")message+=" Ø³Ø¨Ø¨:"+sparam;break;
